<table>
	<% @cart.lineitems.each do |item| %>
	<tr>
		<td><%= item.quantity %> &times; </td>
		<td><%= item.vinyl.artist %></td>
		<td><%= item.vinyl.album %></td>
	</tr>
	<% end %>
</table>

<%= button_to 'Continue Shopping', root_path, :method => :get %>
<%= button_to 'Empty Cart', @cart, method: :delete, confirm: 'Emptying the cart cannot be undone. Are you sure you want to empty your cart?' %>
<%= button_to 'Checkout', new_order_path, :method => :get %> 

